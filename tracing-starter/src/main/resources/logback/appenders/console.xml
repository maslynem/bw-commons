<included>
    <springProperty name="APPENDER_CONSOLE_ENABLE" source="logging.appender.console.enable" defaultValue="true"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.core.filter.EvaluatorFilter">
            <evaluator class="ch.qos.logback.classic.boolex.JaninoEventEvaluator">
                <expression>return ${APPENDER_CONSOLE_ENABLE};</expression>
            </evaluator>
            <OnMatch>NEUTRAL</OnMatch>
            <OnMismatch>DENY</OnMismatch>
        </filter>
        <encoder>
            <pattern>
                %d{yyyy-MM-dd'T'HH:mm:ss.SSSZ} %-5level [%logger] %msg traceId=%X{traceId:-} spanId=%X{spanId:-} %ex%n
            </pattern>
        </encoder>
    </appender>
</included>
